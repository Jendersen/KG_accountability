@prefix kgi: <http://ns.inria.fr/kg/index#> .
@prefix dcterms: <http://purl.org/dc/terms/> .

<> a kgi:TestQuery ;
    dcterms:title "Creation location" ;
    dcterms:isReferencedBy <manifest.ttl> ;
    dcterms:description "From what physical location (state, country, continent, ...) was the dataset created?" ;
    kgi:query """
        PREFIX void: <http://rdfs.org/ns/void#>
        PREFIX dcat: <http://www.w3.org/ns/dcat#>
        PREFIX prov: <http://www.w3.org/ns/prov#>
        PREFIX pav: <http://purl.org/pav/>
        PREFIX foaf: <http://xmlns.com/foaf/0.1/>
        PREFIX schema: <http://schema.org/>
        PREFIX dce: <http://purl.org/dc/elements/1.1/>
        PREFIX dcterms: <http://purl.org/dc/terms/>
        ASK {
            # Find the KG
            { ?kg a dcat:Dataset }
            UNION { ?kg a void:Dataset }
            ?kg ?endpointLink $rawEndpointUrl .
        
            # Find a location
            {?kg schema:locationCreated ?location .}
            UNION {?kg pav:createdAt ?location .}
            UNION {?kg prov:wasGeneratedBy ?act .
                   {?act a prov:Create . } UNION {?act a prov:Contribute . }
                   ?act prov:atLocation ?location .}
        }
""" .
